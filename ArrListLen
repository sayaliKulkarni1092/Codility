// you can write to stdout for debugging purposes, e.g.
// System.out.println("this is a debug message");

class Solution {
    public int solution(int[] A) {
        // Implement your solution here
        int ans = 0;
        int count = 0;

        while (A[count] != -1) {
            count = A[count];
            ans++;
        }
        ans++;
        return ans;
    }
}
